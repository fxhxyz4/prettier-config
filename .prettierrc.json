{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tabWidth": 2,
	"useTabs": true,
  "printWidth": 120,
	"singleQuote": true,
	"jsxSingleQuote": true,
  "singleAttributePerLine": true,
	"arrowParens": "avoid",
	"semi": true,
	"jsxBracketSameLine": false,
  "bracketSameLine": false,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"proseWrap": "always",
	"quoteProps": "as-needed",
	"endOfLine": "lf",
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-multiline-arrays"
  ],
  "multilineArraysWrapThreshold": 2,
  "importOrder": [
    "<BUILTIN_MODULES>",
    "^(react|next(.*))$",
    "<THIRD_PARTY_MODULES>",
    "<TYPES>",
    "",
    "^@/(.*)$",
    "^~/(.*)$",
    "^[./]",
    "<TYPES>^[.]",
    "^(.*)(sass|css|scss)$"
  ],
  "importOrderParserPlugins": [
    "classProperties",
    "decorators-legacy",
    "jsx",
    "typescript"
  ]
}
