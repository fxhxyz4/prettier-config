root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript - синхронизировано с Prettier
[*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}]
indent_size = 2

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# HTML/CSS
[*.{htm,html,css,sass,scss,less,pcss,vue}]
indent_size = 2

# SVG
[*.svg]
indent_size = 2

# Markdown
[*.{md,mdx}]
trim_trailing_whitespace = false
indent_size = 2

# Visual Studio Files
[*.sln]
indent_style = tab

[*.{csproj,vbproj,vcxproj.filters,proj,projitems,shproj,xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct}]
indent_size = 2

# Shell Scripts
[*.sh]
end_of_line = lf

[*.{cmd,bat}]
end_of_line = crlf

[Makefile]
indent_style = tab

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore

